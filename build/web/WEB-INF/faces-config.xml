    <navigation-rule>
        <!-- * is specified in the <form-view-id> </form-view-id> and tag to implement the global navigation rule-->
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-action>#{bean.Action}</from-action>
            <from-outcome>student</from-outcome>
            <to-view-id>/StudentProfile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{bean.Action}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/LoginError.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
